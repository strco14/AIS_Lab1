<local:BaseView x:Class="аис_лаба_1.View.SearchWineView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:аис_лаба_1.View"
        mc:Ignorable="d"
        Title="Поиск вин" 
        Height="250" 
        Width="400"
        WindowStartupLocation="CenterOwner">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Название -->
        <TextBlock Grid.Row="0" Text="Название:" Margin="0,5"/>
        <TextBox Grid.Row="1" 
                Text="{Binding SearchCriteria.Name, UpdateSourceTrigger=PropertyChanged}" 
                Margin="0,0,0,10"/>

        <!-- Тип -->
        <TextBlock Grid.Row="2" Text="Тип:" Margin="0,5"/>
        <ComboBox Grid.Row="3" 
                 ItemsSource="{Binding WineTypes}"
                 SelectedItem="{Binding SearchCriteria.Type}"
                 Margin="0,0,0,10"/>

        <!-- Сладость -->
        <TextBlock Grid.Row="2" Grid.Column="1" Text="Сладость:" Margin="5,5,0,5"/>
        <ComboBox Grid.Row="3" Grid.Column="1" 
                 ItemsSource="{Binding SugarTypes}"
                 SelectedItem="{Binding SearchCriteria.Sugar}"
                 Margin="5,0,0,10"/>

        <!-- Страна -->
        <TextBlock Grid.Row="2" Grid.Column="2" Text="Страна:" Margin="5,5,0,5"/>
        <ComboBox Grid.Row="3" Grid.Column="2" 
                 ItemsSource="{Binding Countries}"
                 SelectedItem="{Binding SearchCriteria.Homeland}"
                 Margin="5,0,0,10"/>

        <!-- Кнопки -->
        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Найти" 
                   Command="{Binding SearchCommand}"
                   IsDefault="True"
                   Margin="5" 
                   Width="80"/>
            <Button Content="Отмена" 
                   Command="{Binding CancelCommand}"
                   IsCancel="True"
                   Margin="5" 
                   Width="80"/>
        </StackPanel>
    </Grid>
</local:BaseView>